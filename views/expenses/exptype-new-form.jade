#exp-type-new-dialog.modal.fade(tabindex="-1", role="dialog", aria-labelledby="exp-type-new-dialog-title", aria-hidden="true")
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
                h4#exp-type-new-dialog-title.modal-title Новая категория расходов
            .modal-body.form-horizontal
                .row
                    .col-md-8.col-lg-offset-1
                        +inputTextNoLbl("exp-type-new-dialog-input-name","Введите наименование категории…")(required)
                    .col-md-3
                        a#exp-type-new-dialog-button-ok.btn.btn-primary.btn-sm(href='javascript:void(0)', style="margin-right:15px")
                            span.glyphicon.glyphicon-ok-circle(aria-hidden="true", style="margin-right:8px")
                            span Добавить